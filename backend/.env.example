# LOCAL DEVELOPMENT CONFIGURATION
# Database (Local - Docker)
DATABASE_URL=postgresql+asyncpg://postgres:postgres123@localhost:5432/rezgenie

# Redis (Local - Docker)
REDIS_URL=redis://:redis123@redis:6379/0
CELERY_BROKER_URL=redis://:redis123@redis:6379/0
CELERY_RESULT_BACKEND=redis://:redis123@redis:6379/0

# Storage (Local - MinIO)
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_SECURE=false
MINIO_BUCKET_NAME=rezgenie-uploads

# PRODUCTION DEPLOYMENT CREDENTIALS (Render + Cloudflare)
# Cloudflare R2 Storage
# Get from: https://dash.cloudflare.com → R2 → Manage R2 API Tokens
# CLOUDFLARE_ACCOUNT_ID=your-account-id-here
# R2_ENDPOINT=https://YOUR_ACCOUNT_ID.r2.cloudflarestorage.com
# R2_ACCESS_KEY=your-r2-access-key-id
# R2_SECRET_KEY=your-r2-secret-access-key
# R2_BUCKET_NAME=rezgenie-uploads

# Render PostgreSQL Database
# Get from: https://dashboard.render.com → Your Database → Connection Info
# RENDER_DB_EXTERNAL_URL=postgresql://user:pass@external-host.render.com:5432/dbname
# DATABASE_URL=postgresql://user:pass@internal-host:5432/dbname  # Use Internal URL!

# Upstash Redis (or Render Redis if available)
# Get from: https://console.upstash.com → Your Redis → Details → TCP tab
# REDIS_URL=redis://default:password@host.upstash.io:6379
# CELERY_BROKER_URL=redis://default:password@host.upstash.io:6379
# CELERY_RESULT_BACKEND=redis://default:password@host.upstash.io:6379

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production-make-it-very-long-and-random
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# Application Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=info

# CORS Configuration (for production, add your Netlify URL)
# BACKEND_CORS_ORIGINS=["https://your-site.netlify.app"]

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=pdf,docx

# Rate Limiting
DAILY_GENIE_WISHES=3
RATE_LIMIT_PER_MINUTE=60

# Celery Configuration
CELERY_BROKER_URL=redis://:redis123@redis:6379/0
CELERY_RESULT_BACKEND=redis://:redis123@redis:6379/0

# Adzuna API Configuration (Get from https://developer.adzuna.com/)
ADZUNA_APP_ID=your_adzuna_app_id_here
ADZUNA_APP_KEY=your_adzuna_app_key_here
ADZUNA_BASE_URL=https://api.adzuna.com/v1/api/jobs
ADZUNA_RATE_LIMIT=10
ADZUNA_MAX_PAGES=5

# Job Processing Configuration
JOB_EMBEDDING_BATCH_SIZE=50
JOB_CLEANUP_DAYS=30
JOB_INGESTION_INTERVAL=3600  # seconds (1 hour)

# Stripe Configuration (Get from https://dashboard.stripe.com/test/apikeys)
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_PRO_PRICE_ID=price_your_pro_price_id_here
STRIPE_UNLIMITED_PRICE_ID=price_your_unlimited_price_id_here