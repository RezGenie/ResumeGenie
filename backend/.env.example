# Backend environment variables
DATABASE_URL=postgresql+asyncpg://postgres:postgres123@localhost:5432/rezgenie

REDIS_URL=redis://:redis123@redis:6379/0
# MinIO/S3 Configuration
MINIO_ENDPOINT=minio:9000

MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin123
MINIO_SECURE=false
MINIO_BUCKET_NAME=rezgenie-uploads

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-in-production-make-it-very-long-and-random
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# Application Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=info

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=pdf,docx

# Rate Limiting
DAILY_GENIE_WISHES=3
RATE_LIMIT_PER_MINUTE=60

# Celery Configuration
CELERY_BROKER_URL=redis://:redis123@redis:6379/0
CELERY_RESULT_BACKEND=redis://:redis123@redis:6379/0

# Adzuna API Configuration
ADZUNA_APP_ID=your_adzuna_app_id_here
ADZUNA_APP_KEY=your_adzuna_app_key_here
ADZUNA_BASE_URL=https://api.adzuna.com/v1/api/jobs
ADZUNA_RATE_LIMIT=10
ADZUNA_MAX_PAGES=5

# Job Processing Configuration
JOB_EMBEDDING_BATCH_SIZE=50
JOB_CLEANUP_DAYS=30
JOB_INGESTION_INTERVAL=3600  # seconds (1 hour)